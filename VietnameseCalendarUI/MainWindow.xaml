        <Style x:Key="CloseButton" BasedOn="{StaticResource ControlButton}" TargetType="Label">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightCoral"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="Content" Value="✖"/>
        </Style>
        
        <Style x:Key="MaximizeButton" BasedOn="{StaticResource ControlButton}" TargetType="Label">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                        AncestorType={x:Type Window}}, Path=WindowState}" Value="Maximized">
                    <Setter Property="Content" Value="2"/>
                    <Setter Property="ToolTip" Value="Trở về kích thước cũ"/>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Content" Value="1"/>
            <Setter Property="ToolTip" Value="Toàn màn hình"/>
            <Setter Property="FontFamily" Value="Webdings"/>
        </Style>
                
        <Style x:Key="CollapseWhenNotInWidgetMode" TargetType="StackPanel">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, Path=WindowStyle}" Value="None">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>
        
        <Style x:Key="DisableWhenMaximized" BasedOn="{StaticResource ControlButton}" TargetType="Control">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                    AncestorType={x:Type Window}}, Path=WindowState}" Value="Maximized">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="IsEnabled" Value="True"/>
        </Style>

        

        <!--<local:WindowStateToMovability x:Key="IsMaximized"/>
        <local:WindowStyleToCloseAndMoveVisibility x:Key="IsNotWidget"/>-->
    </Window.Resources>

    <Grid>
        <local:AugustineCalendarMonth x:Name="augustineCalendarMonth"/>
        <Popup Name="ToolsPopup"
               Placement="Right"
               HorizontalOffset="5"
               AllowsTransparency="True"
               PopupAnimation="Fade"
               MouseLeave="Popup_MouseLeave"
               >
            <Popup.Effect>
                <DropShadowEffect BlurRadius="3" ShadowDepth="2" RenderingBias="Quality"/>
            </Popup.Effect>
            <Border 
                    DockPanel.Dock="Right" 
                    CornerRadius="5" 
                    Padding="3"
                    BorderBrush="Gray"
                    BorderThickness="1" Background="LightGray">
                <StackPanel>
                    <!--<StackPanel Visibility="{Binding WindowStyle, ElementName=window, Converter={StaticResource IsNotWidget}}">-->
                    <StackPanel Style="{StaticResource CollapseWhenNotInWidgetMode}">
                        <Label x:Name="buttonClose" Style="{StaticResource CloseButton}"  MouseDown="buttonClose_MouseDown" />
                        <Label x:Name="buttonMaximize" Style="{StaticResource MaximizeButton}" MouseDown="buttonMaximize_MouseDown" />
                        <Label x:Name="buttonMove" Content="⋮⋮⋮" 
                           Style="{StaticResource DisableWhenMaximized}"
                           ToolTip="Di chuyển" 
                           MouseDown="buttonMove_MouseDown" 
                           MouseUp="buttonMove_MouseUp"
                           Cursor="SizeAll"/>
                        <Separator></Separator>
                    </StackPanel>
                    <Label x:Name="buttonConverterTool" Content="🔀" 
                            Style="{StaticResource ControlButton}"
                            ToolTip="Công cụ chuyển đổi âm/dương lịch..." MouseDown="ConverterToolButton_Click" 
                            FontFamily="Segoe UI Symbol"/>
                    <Label x:Name="buttonWidget" Content="⛶" 
                            Style="{StaticResource ControlButton}"
                            ToolTip="Chế độ widget..." MouseDown="buttonWidget_Click" />
                    <Label x:Name="buttonSettings" Content="🔧" 
                            Style="{StaticResource ControlButton}"
                            ToolTip="Tùy chỉnh giao diện..." MouseDown="buttonSettings_Click"/>
                    <Separator></Separator>
                    <Label x:Name="buttonAbout" Content="&#xE2C0;" 
                            Style="{StaticResource ControlButton}"
                            ToolTip="Thông tin chương trình..." MouseDown="AboutButton_Click" Cursor="Help" FontFamily="Segoe UI Symbol"/>
                </StackPanel>
            </Border>
        </Popup>
        <Border VerticalAlignment="Top" HorizontalAlignment="Right" Width="30" Height="30" 
                MouseEnter="Border_MouseEnter"
                Background="#01000000">
        </Border>
    </Grid>
</Window>
