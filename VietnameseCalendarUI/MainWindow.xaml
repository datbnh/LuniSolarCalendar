<Window x:Name="window" x:Class="Augustine.VietnameseCalendar.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Augustine.VietnameseCalendar.UI"
        mc:Ignorable="d"
        Title="Lịch Việt Nam" 
        Background="{x:Null}"
        SnapsToDevicePixels="True" 
        MouseDown="Window_MouseDown" 
        Width="500" Height="400" 
        ResizeMode="CanResizeWithGrip" 
        Loaded="Window_Loaded" 
        StateChanged="Window_StateChanged"
        LocationChanged="Window_LocationChanged" SizeChanged="Window_SizeChanged" WindowStyle="None" AllowsTransparency="True"
        >
    <Window.Resources>
        
        <Style x:Key="ControlButton" TargetType="Control">
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--<Style TargetType="{x:Type Button}" BasedOn="{StaticResource ControlButton}">
            <Setter Property="BorderBrush" Value="{x:Null}"/>
